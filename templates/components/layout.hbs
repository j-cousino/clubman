<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>{{title}}</title>
  <meta name="description" content="Hello World">
  <meta name="author" content="Jeff Cousino">
  <link rel="icon" type="image/svg" href="/static/logos/clubman_icon.svg" sizes="any"/>
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <!--Local style changes-->
  <style>
    .w3-bar .w3-button {
      padding: 16px;
    }

    .menuicon {
      display: inline-block;
      cursor: pointer;
      background-color: rgba(0,0,0,.2);
    }

    .bar1, .bar2, .bar3 {
      width: 35px;
      height: 6px;
      background-color: rgb(255, 255, 255);
      margin: 6px 0;
      transition: 0.4s;
      border-radius: 2px;
    }

    .change .bar1 {
      -webkit-transform: translate(0px, 12px) rotate(-45deg);
      transform: translate(0px, 12px) rotate(-45deg)
    }

    .change .bar2 {
      opacity: 0;
      transform: translate(-35px, 0px)
    }

    .change .bar3 {
      -webkit-transform: translate(0px, -12px) rotate(45deg);
      transform: translate(0px, -12px) rotate(45deg)
    }

  </style>
</head>
<body>
  {{> components/nav}}
  {{~> page}}
  {{> components/footer}}
  <script>
    function menuToggleIfShown() {
      if ( document.getElementById("mobileNav")
            .className.match("w3-show") ) {
              menuToggle();
            }
    }

    function menuToggle() {
      var x = document.getElementById("mobileNav");
      
      document.getElementById("menuicon").classList.toggle("change");

      if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
      } else { 
        x.className = x.className.replace(" w3-show", "");
      }
    }
  </script>    
</body>
</html>
